<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="button.gray">
        <item name="android:background">@drawable/round_button_gray</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="button.superGray">
        <item name="android:background">@drawable/round_button_super_gray</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="button.orange">
        <item name="android:background">@drawable/round_button_orange</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>